                top: 50%;
                left: 50%;
                position: absolute;
                margin: auto;
                transform: translate(-50%, -50%)
            }

            .maincontainer2 {
                border: 1px black solid;
                top: 25%;
                left: 31%;
                position: absolute;
                margin: 0 auto;
                transform: translate(-20%, -50%);
                
            }
            
            .container1 {
                width: 150px;
                height: 70px;
                margin: 25px 25px;
                border: 1px black solid;
                float: left;
                text-align: center;
                padding-bottom: 15px;
            }

            .imgcontainer {
                width: 220px;
                height: 150px;
                margin: 25px 25px;
                border: 1px #fc1414 solid;
                float: left;
                text-align: center;
                padding-bottom: 25px;
            }

            #worten {
                width: 200px;
                height: 100px;
                margin: 20px 10px;
                position: relative;
                visibility: hidden;
            }

            #fnac {
                width: 100px;
                height: 100px;
                margin: 20px 35px;
                position: relative;
                visibility: hidden;
            }

            #rp {
                width: 100px;
                height: 100px;
                margin: 20px 35px;
                position: relative;
                visibility: hidden;
            }
        
