    <body>

        <div class="maincontainer">	

            <div class="container1">
        
                <p id="p1"> Hello World! </p>
                <button id="b1"> Click ME! </button>

            </div>

            <div class="container1">

                <p id="p2"> Hello World! </p>
                <button id="b2"> Click ME! </button>

            </div>

            <div class="container1">

                <p id="p3"> Hello World! </p>
                <button id="b3"> Click ME! </button>

            </div>

        </div>

        <div class="maincontainer2">

            <div class="imgcontainer">

            <img id="worten" src="Images/Worten.png">
            <button id="bimg1"> What's this?! </button>

            </div>

            <div class="imgcontainer">
            <img id="fnac" src="Images/fnac.png">
            <button id="bimg2"> What's Here?! </button>
            </div>

            <div class="imgcontainer">
            <img id="rp" src="Images/RP.png">
            <button id="bimg3"> What's There?! </button>
            </div>

        </div>

        <script type="text/javascript">

            
            document.getElementById("b1").onclick = function() {
                document.getElementById("p1").style.color = "Red";
            }
            
            document.getElementById("b2").onclick = function myFunction() {
                var x = document.getElementById("p2");
                if (x.style.color === "blue") {
                    x.style.color = "black";
                } else {
                    x.style.color = "blue";
                }
            }

            document.getElementById("b3").onclick = function myFunction() {
                var x = document.getElementById("p3");
                if (x.style.visibility === "hidden") {
                    x.style.visibility = "visible";
                } else {
                    x.style.visibility = "hidden";
                }
            }

            document.getElementById("bimg1").onclick = function myFunction() {
                var x = document.getElementById("worten");
                if (x.style.visibility === "visible") {
                    x.style.visibility = "hidden";
                } else {
                    x.style.visibility = "visible";
                }
            }

            document.getElementById("bimg2").onclick = function myFunction() {
                var x = document.getElementById("fnac");
                if (x.style.visibility === "visible") {
                    x.style.visibility = "hidden";
                } else {
                    x.style.visibility = "visible";
                }
            }

            document.getElementById("bimg3").onclick = function myFunction() {
                var x = document.getElementById("rp");
                if (x.style.visibility === "visible") {
                    x.style.visibility = "hidden";
                } else {
                    x.style.visibility = "visible";
                }
            }

        </script>

