<!doctype Html>

<html>
  <head>

     <title> Project 1 </title>

     <style type="text/css">

        #container {
            display: block;
            justify-content: center;
            flex-wrap: wrap;
            width: 70%;
            margin: 20% auto;
            position: relative;
            text-align:center;
        }

        button {
            width: 200px;
            height: 100px;
            margin: 30px 30px 0 30px;
        }

        #p1 {
            top: 50%;
            left: 50%;
        }

        #p2 {
            top: 50%;
            left: 50%;
        }

        #p3 {
            top: 50%;
            left: 50%;
        }

     </style>

  </head>

<body>

    <div id="container">
        <div id="container">
        <span id="p1"> Hello World! </span>
        <button id="b1"> Click ME! </button>
        </div>
        <br>
        <div id="container">
        <span id="p2"> This is Some text!</span>
        <button id="b2">Click Me! </button>
        </div>
        <br>
        <div id="container">
        <span id="p3"> This is another text! </span>
        <button id="b3"> Click Me! </button> 
        </div>
    </div>


    <script type="text/javascript">

        
        document.getElementById("b1").onclick = function() {
            document.getElementById("p1").style.color = "Red";
        }
	    
        document.getElementById("b2").onclick = function myFunction() {
            var x = document.getElementById("p2");
            if (x.style.color === "blue") {
                x.style.color = "black";
            } else {
                x.style.color = "blue";
            }
        }

        document.getElementById("b3").onclick = function myFunction() {
            var x = document.getElementById("p3");
            if (x.style.display === "none") {
                x.style.display = "block";
            } else {
                x.style.display = "none";
            }
        }


    </script>

  </body>

</html>
